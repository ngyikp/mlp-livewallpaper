    </style>

    <style name="TextAppearance.WindowTitle.Rarity" parent="@style/TextAppearance.WindowTitle">
        <item name="android:textColor">#ff2E75B7</item>
    </style>

    <style name="Theme.Pony.TwilightSparkle" parent="@style/Theme.Pony">
        <item name="android:windowTitleStyle">@style/WindowTitle.TwilightSparkle</item>
        <item name="android:windowTitleBackgroundStyle">
            @style/WindowTitleBackground.TwilightSparkle
        </item>
    </style>

    <style name="WindowTitle.TwilightSparkle" parent="@style/WindowTitle">
        <item name="android:textAppearance">@style/TextAppearance.WindowTitle.TwilightSparkle</item>
    </style>

    <style name="WindowTitleBackground.TwilightSparkle">
        <item name="android:background">#ffC9A9D0</item>
    </style>

    <style name="TextAppearance.WindowTitle.TwilightSparkle" parent="@style/TextAppearance.WindowTitle">
        <item name="android:textColor">#ff5F2C84</item>
    </style>
    <!-- ************************************************************************************************************** -->
    <style name="WidgetProgressBarSmallTitle" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:paddingLeft">14.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:maxWidth">16.0dip</item>
        <item name="android:maxHeight">16.0dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">16.0dip</item>
        <item name="android:minHeight">16.0dip</item>
    </style>

    <style name="CustomWindowTitleAction">
        <item name="android:background">@drawable/title_button</item>
        <item name="android:layout_width">?android:windowTitleSize</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:onClick">onTitleClick</item>
    </style>

    <style name="CustomWindowTitleProgressCircular" parent="@style/WidgetProgressBarSmallTitle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:id">@id/progress_circular</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomWindowTitleSeparator">
        <item name="android:background">@color/window_title_separator</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <item name="progress_circular" type="id" />
</resources>